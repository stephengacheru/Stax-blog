{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}


<div class="row top-content">
    <div class="col-md-11  blog-post-content">
        <div class="row">
             
            <div class="col-lg-9  {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

                {{!-- Displays the featured image if exists --}}
                {{#if feature_image}}
                <figure>
                    <img src="{{img_url feature_image}}" alt="{{title}}" class="img-fluid blog-featured-image" />
                </figure>
                {{/if}}
                
                {{!-- Display the post title --}}
                <h1 class="blog-post-title">{{title}}</h1> 
            </div>
            <div class="col-lg-7 offset-md-1 col-md-11">
                {{!-- Display the post content --}}
                    {{content}}
            </div>
        </div>
    </div>
    
</div>

{{/post}}

