{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The main content area --}}

<div class="row top-content">
    <div class="col-12">
       <h1>BLOG</h1>            
    </div>
</div>

<div class="row">
    <div class="col-md-11 offset-md-1">
        <div class="row">
            <div class="col-lg-7 col-md-11">
               <p class="blog-page-lead">We are on a mission to inform you about all things USSD in Africa and how it affects you. Read our blog.</p>
            </div>
        </div>
       <div class="row">
            <div class="col-md-10 blog-list">
                <div class="row {{post_class}}">
                {{!-- Iterate through each posts --}}
                {{#foreach posts}}
                  
                      <div class="col-lg-4 col-md-6 blog-post-thumb-container">
                           <div class="skewed-bg-bottom-left position-relative mid-grey-bg blog-post-thumb">
                                 {{#if feature_image}}
   
                                    {{!-- This is a responsive image, it loads different sizes depending on device
                                    https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                                    <img class="post-card-image"
                                        srcset="{{img_url feature_image size="s"}} 300w,
                                                {{img_url feature_image size="m"}} 600w,
                                                {{img_url feature_image size="l"}} 1000w,
                                                {{img_url feature_image size="xl"}} 2000w"
                                        sizes="(max-width: 1000px) 400px, 800px"
                                        src="{{img_url feature_image size="m"}}"
                                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                        loading="lazy"
                                    />
                                {{/if}}
                                {{!-- Post title --}}
                                <h3><a href="{{url}}" class="stretched-link">{{title}}</a></h3>
                            </div>
                     </div>
                  
                {{/foreach}}</div>
            </div>
        </div>
    </div>
</div>


